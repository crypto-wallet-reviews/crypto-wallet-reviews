<h1>Wallet Info</h1> 

{{#with walletInfo}}

<img src="{{imgPath}}" width="100px" heigth="100px" alt="image missing">
<h3>{{name}}</h3>
<p>{{description}}</p>

<hr>

{{!-- List the reviews --}}
{{#if reviews}}
<h4>Reviews</h4>
  {{#each reviews}}
    
    <h5>{{user}} says:</h5>
    <p>{{review}}</p>
    {{#times rating}}
    <span class="fa fa-star checked"></span>
    {{/times}}
    <p>{{rating}}/5</p>

    
    <hr>
  {{/each}}
{{else}}
<p>No reviews yet</p>
{{/if}}

<a href="/wallet/review/{{_id}}">Write A Review</a>



{{/with}}